description = <a href="https://github.com/rodericksandoval/raiz">Starter theme for Drupal 7</a>
engine      = phptemplate
core        = 7.x

;-----------------------------------------------------------
; REGIONS
;-----------------------------------------------------------

regions[page_top]             = Page top
regions[page_bottom]          = Page bottom

regions[utility_bar]          = Utility Bar
regions[header]               = Header
regions[navigation]           = Navigation

regions[featured]             = Featured
regions[above_main]           = Above main

regions[help]                 = Help
regions[highlighted]          = Highlighted

regions[content]              = Content
regions[sidebar_first]        = Sidebar first
regions[sidebar_second]       = Sidebar second

regions[below_main]           = Below main

regions[triptych_first]       = Triptych first
regions[triptych_middle]      = Triptych middle
regions[triptych_last]        = Triptych last

regions[footer_firstcolumn]   = Footer first column
regions[footer_secondcolumn]  = Footer second column
regions[footer_thirdcolumn]   = Footer third column
regions[footer_fourthcolumn]  = Footer fourth column
regions[footer]               = Footer

;-----------------------------------------------------------
; BREAKPOINTS
;-----------------------------------------------------------
breakpoints[narrow] = (min-width: 768px)
breakpoints[normal] = (min-width: 960px)

;-----------------------------------------------------------
; CSS
;-----------------------------------------------------------
stylesheets[all][] = css/normalize.css
stylesheets[all][] = css/style.css

;-----------------------------------------------------------
; CONDITIONAL STYLES
;-----------------------------------------------------------
; All browsers
stylesheets-conditional[(gte IE 9)|(!IE)][all][] = css/style.css
; Internet Explorer, less than 9
stylesheets-conditional[lt IE 9][all][] = css/no-query.css

;-----------------------------------------------------------
; JS
;-----------------------------------------------------------
scripts[] = js/modernizr.min.js
scripts[] = js/scripts.js

;-----------------------------------------------------------
; SETTINGS
;-----------------------------------------------------------
settings[toggle_logo] = '0'
settings[toggle_favicon] = '1'
settings[toggle_name] = '1'
settings[toggle_slogan] = '0'

settings[toggle_main_menu] = '0'
settings[toggle_secondary_menu] = '0'

settings[toggle_node_user_picture] = '0'
settings[toggle_comment_user_picture] = '0'
settings[toggle_comment_user_verification] = '0'

settings[default_logo] = '1'
settings[default_favicon] = '1'
